<div class="cart-container" style="max-width: 1200px; margin: 40px auto; padding: 0 20px;">
  <h1 style="font-family: 'Inter', sans-serif;">Your Cart</h1>
  
  {% if cart.item_count > 0 %}
    <form action="/cart" method="post" novalidate>
      <table style="width: 100%; border-collapse: collapse;">
        <thead>
          <tr style="border-bottom: 2px solid #000; text-align: left;">
            <th style="padding: 10px 0;">Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th style="text-align: right;">Total</th>
          </tr>
        </thead>
        <tbody>
          {% for item in cart.items %}
            <tr style="border-bottom: 1px solid #eee;">
              <td style="padding: 20px 0; display: flex; gap: 20px; align-items: center;">
                <img src="{{ item.image | img_url: '100x' }}" alt="{{ item.title }}" style="width: 80px;">
                <div>
                  <a href="{{ item.url }}" style="text-decoration: none; color: #000; font-weight: 600;">{{ item.product.title }}</a>
                  <p style="margin: 5px 0; font-size: 14px; color: #666;">{{ item.variant.title }}</p>
                </div>
              </td>
              <td>{{ item.price | money }}</td>
              <td>{{ item.quantity }}</td>
              <td style="text-align: right;">{{ item.line_price | money }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
      
      <div style="text-align: right; margin-top: 30px;">
        <p style="font-size: 20px; font-weight: 700;">Subtotal: {{ cart.total_price | money }}</p>
        <button type="submit" name="checkout" style="background: #000; color: #fff; border: none; padding: 15px 40px; text-transform: uppercase; font-weight: 600; cursor: pointer; margin-top: 10px;">
          Checkout &rarr;
        </button>
      </div>
    </form>
  {% else %}
    <p>Your cart is empty. <a href="/">Continue shopping</a></p>
  {% endif %}
</div>
