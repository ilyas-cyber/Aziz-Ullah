<div class="product-page" style="max-width: 1200px; margin: 40px auto; padding: 0 20px;">
  <h1>{{ product.title }}</h1>
  <div style="display: flex; gap: 40px;">
    <div style="flex: 1;">
      <img src="{{ product.featured_image | img_url: '600x' }}" alt="{{ product.title }}" style="width: 100%;">
    </div>
    <div style="flex: 1;">
      <p style="font-size: 24px; font-weight: 600;">{{ product.price | money }}</p>
      <div style="margin: 20px 0;">{{ product.description }}</div>
      <a href="/" style="display: inline-block; margin-top: 20px; color: #000; font-weight: 600;">&larr; Back to Home</a>
    </div>
  </div>
</div>
