{%- style -%}
  .grid-{{ section.id }} {
    padding: 80px 0;
    background: #fff;
  }

  .grid-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .grid-title {
    font-family: 'Inter', sans-serif;
    font-size: 32px;
    margin-bottom: 40px;
    font-weight: 500;
    text-align: left;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .product-card {
    position: relative;
    aspect-ratio: 1 / 1.2;
    overflow: hidden;
  }

  .product-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .hotspot {
    position: absolute;
    width: 22px;
    height: 22px;
    background: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    font-weight: 600;
    color: #000;
    box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    transition: transform 0.2s ease;
    z-index: 5;
    font-size: 14px;
    line-height: 1;
  }

  .hotspot:hover {
    transform: scale(1.2);
  }

  /* Hotspot positions for 6 blocks - usually these would be editable but I will provide defaults or make them styleable */
  .hotspot-1 { top: 60%; left: 60%; }
  .hotspot-2 { top: 70%; left: 80%; }
  .hotspot-3 { top: 10%; left: 80%; }
  .hotspot-4 { top: 80%; left: 70%; }
  .hotspot-5 { top: 80%; left: 50%; }
  .hotspot-6 { top: 85%; left: 85%; }

  @media (max-width: 900px) {
    .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .product-grid {
      grid-template-columns: 1fr;
    }
    .grid-title {
      font-size: 24px;
    }
  }
{%- endstyle -%}

<section class="grid-{{ section.id }}">
  <div class="grid-container">
    <h2 class="grid-title">{{ section.settings.title }}</h2>
    <div class="product-grid">
      {%- for block in section.blocks -%}
        {%- assign product = block.settings.product -%}
        <div class="product-card" {{ block.shopify_attributes }}>
          {%- if product != blank -%}
            <img src="{{ product.featured_image | img_url: '600x' }}" alt="{{ product.title }}">
            <div class="hotspot hotspot-{{ forloop.index }}" 
                 data-product-handle="{{ product.handle }}"
                 data-product-id="{{ product.id }}">
              +
            </div>
          {%- else -%}
             {{ 'product-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% render 'product-modal' %}

{% schema %}
{
  "name": "Custom Product Grid",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Section Title",
      "default": "Tisso vison in the wild"
    }
  ],
  "blocks": [
    {
      "type": "product_block",
      "name": "Product Block",
      "limit": 6,
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Product Grid",
      "blocks": [
        { "type": "product_block" },
        { "type": "product_block" },
        { "type": "product_block" },
        { "type": "product_block" },
        { "type": "product_block" },
        { "type": "product_block" }
      ]
    }
  ]
}
{% endschema %}
